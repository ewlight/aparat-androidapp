<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#00C8FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tombolUtama2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pengumumanLogo2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/grouplogo"
            android:layout_weight="1"
            android:background="#00C8FF"
            />
        <ImageView
            android:id="@+id/pengaturanLogo2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pengumumanlogo"
            android:layout_weight="1"
            android:background="#00C8FF"
            />
        <ImageView
            android:id="@+id/groupLogo2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pengaturanlogo"
            android:layout_weight="1"
            android:background="#00C8FF"
            />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tombolUtama2">

    </ListView>
    </RelativeLayout>

